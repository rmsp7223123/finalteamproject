<resources>

    <style name="FontSmall" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FontMiddle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FontLarge" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Finalteamproject.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Finalteamproject.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ChipCategoryStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="chipMinHeight">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipBackgroundColor">@color/main_color</item>
        <item name="chipIconTint">#fffFff</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="chipIconEnabled">true</item>


    </style>
</resources>