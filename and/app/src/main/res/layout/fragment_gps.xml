<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".gps.GpsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText

                    android:id="@+id/gps_search"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:background="@drawable/box_radius"
                    android:drawableLeft="@drawable/resize_search"
                    android:drawablePadding="10dp"
                    android:drawableTint="#A9A9AB"
                    android:hint="이름 또는 주소로 경로당 찾기"
                    android:paddingLeft="10dp"
                    android:textColorHint="#A9A9AB"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_search"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/box_fill"
                    android:gravity="center"
                    android:text="검색" />

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_grp"
                    android:padding="5dp"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        app:chipMinHeight="40dp"
                        android:checked="true"
                        app:iconStartPadding="10dp"
                        app:iconEndPadding="10dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        app:chipBackgroundColor="@drawable/chip_gps_background"
                        android:textColor="#000"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="주변 경로당"
                        app:chipIcon="@drawable/navermap_default_marker_icon_green"
                        app:chipIconEnabled="true"
                        app:chipIconTint="@drawable/chip_gps_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.chip.Chip
                        app:chipMinHeight="40dp"
                        android:checked="true"
                        app:iconStartPadding="10dp"
                        app:iconEndPadding="10dp"
                        app:textStartPadding="10dp"
                        app:textEndPadding="10dp"
                        app:chipBackgroundColor="@drawable/chip_gps_background"
                        android:textColor="#000"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="자주가는 경로당"
                        app:chipIcon="@drawable/ic_like"
                        app:chipIconEnabled="true"
                        app:chipIconTint="@drawable/chip_gps_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="자주가는 경로당"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recv_bmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="... " />

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 더보기"
                        android:textColor="#2196F3"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>




        </LinearLayout>

    </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ln_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >

        <LinearLayout
            android:background="@drawable/box_search_result"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/tv_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색결과"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/baseline_close_24" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recv_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/white" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>