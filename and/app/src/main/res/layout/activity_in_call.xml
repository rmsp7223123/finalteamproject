<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.InCallActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="80dp"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgv_profile_img"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/haerin2"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_calltime"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="통화시간 나올부분"
        android:textSize="25dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#F60000"
        android:backgroundTint="#F60000"
        app:cardElevation="0dp"
        app:cardCornerRadius="40dp">



            <ImageView
                android:id="@+id/imgv_calloff"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_call_end_24"/>


    </androidx.cardview.widget.CardView>

</FrameLayout>