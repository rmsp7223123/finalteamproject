<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
        android:background="#F7DE6D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imgv_menu"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/menu"/>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="친구추천"
            android:textSize="27dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgv_alarm_history"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cv_small_profile"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/letter"
            android:layout_marginRight="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_alarm_cnt"
            android:layout_toStartOf="@id/cv_small_profile"
            android:layout_marginRight="13dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_border">

                    <TextView
                        android:id="@+id/tv_alarm_cnt"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"/>
                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_small_profile"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/imgv_small_profile"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/haerin2"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    </LinearLayout>


        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

        <com.yuyakaido.android.cardstackview.CardStackView
            android:id="@+id/swipeStack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="32dp"/>


        </FrameLayout>




    </LinearLayout>


    <LinearLayout

        android:id="@+id/ln_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="#000"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:text="게시판"
                android:textColor="#F6DD6D"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgv_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/close_white" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recv_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp" />

    </LinearLayout>
</RelativeLayout>
