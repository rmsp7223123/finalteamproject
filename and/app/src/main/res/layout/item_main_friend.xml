<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:background="#FFD6A5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgv_profile"
                        android:scaleType="center"
                        android:src="@drawable/logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <FrameLayout
                            android:alpha="0.7"
                            android:background="@drawable/gradient_trans"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:textColor="#fff"
                            android:text="이름"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </FrameLayout>

                </FrameLayout>


            </LinearLayout>




        </FrameLayout>


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup"
            android:padding="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <FrameLayout
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/ln_sub"
            android:layout_alignTop="@+id/tv_nickname"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/cv_add"
                    android:layout_gravity="left"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:background="#FFD6A5"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgv_add"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_favorite_24"
                            app:tint="#FFFFFF" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>


                <TextView

                    android:textStyle="bold"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="10px"
                    android:textSize="15dp"
                    android:textColor="#4E300C"
                    android:text="친구 추가"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_message"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:background="#CBFFA9"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgv_message"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_chat_bubble_24"
                            app:tint="#FFFFFF" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
                <TextView

                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#4E300C"
                    android:layout_marginTop="10px"
                    android:text="메세지 전송"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>