<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setting.SettingFragment"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_marginBottom="30dp"
       android:layout_marginTop="30dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="설정"
          android:textColor="@color/black"
          android:textSize="27sp" />

   </RelativeLayout>
   <LinearLayout
       android:layout_marginHorizontal="10dp"
       android:background="@drawable/border_black_fill_yellow"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   <LinearLayout
       android:id="@+id/container_linear_change_profile"
       android:layout_marginVertical="10dp"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">

      <androidx.cardview.widget.CardView
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         app:cardElevation="0dp"
         app:cardCornerRadius="30dp">

         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/imgv_profile_img"
            android:scaleType="centerCrop"
             android:layout_width="60dp"
             android:layout_height="60dp"
            android:src="@drawable/hanni9"/>

      </androidx.cardview.widget.CardView>

      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="250dp"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:textSize="22dp"
             android:id="@+id/tv_name"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="이름"/>

         <TextView
             android:textSize="18dp"
             android:id="@+id/tv_nickname"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="닉네임"/>

      </LinearLayout>

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
         android:src="@drawable/forward"
         android:layout_gravity="center"/>

   </LinearLayout>
   </LinearLayout>


   <LinearLayout
       android:id="@+id/container_linear_change_godok"
       android:layout_marginVertical="10dp"
       android:layout_marginLeft="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">


         <ImageView
             android:layout_gravity="center"
             android:id="@+id/imgv_change_godok"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/baseline_mail_outline_24"/>


      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

         <TextView
             android:textSize="25dp"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="안부 문자 발신" />

         <com.suke.widget.SwitchButton

             android:layout_marginLeft="70dp"
             android:id="@+id/switch_button_godok"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </LinearLayout>
   </LinearLayout>


   <LinearLayout
       android:id="@+id/container_linear_change_alarm"
       android:layout_marginVertical="10dp"
       android:layout_marginLeft="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">



         <ImageView
             android:layout_gravity="center"
             android:id="@+id/imgv_change_alarm"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/change_alarm"/>


      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

         <TextView
             android:textSize="25dp"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="알람" />

         <com.suke.widget.SwitchButton
             android:layout_marginLeft="175dp"
             android:id="@+id/switch_button_alarm"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>

      </LinearLayout>



   </LinearLayout>


   <LinearLayout
       android:id="@+id/container_linear_change_pw"
       android:layout_marginVertical="10dp"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">

         <ImageView
             android:layout_gravity="center"
             android:id="@+id/imgv_change_pw"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/change_pw"/>

      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="250dp"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:textSize="25dp"
             android:id="@+id/tv_pw"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="비밀번호 설정" />

      </LinearLayout>

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/forward"
          android:layout_gravity="center"/>

   </LinearLayout>


   <LinearLayout
       android:id="@+id/container_linear_logout"
       android:layout_marginVertical="10dp"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">

         <ImageView
             android:id="@+id/imgv_logout"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_gravity="center"
             android:src="@drawable/logout"/>

      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="250dp"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:textSize="25dp"
             android:id="@+id/tv_logout"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="로그아웃" />

      </LinearLayout>

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/forward"
          android:layout_gravity="center"/>

   </LinearLayout>


   <LinearLayout
       android:id="@+id/container_linear_delete_account"
       android:layout_marginVertical="10dp"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:layout_height="70dp">


         <ImageView
             android:layout_gravity="center"
             android:id="@+id/imgv_delete_account"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/account"/>
      <LinearLayout
          android:layout_marginLeft="20dp"
          android:gravity="center|left"
          android:layout_width="250dp"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:textSize="25dp"
             android:id="@+id/tv_delete_account"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="회원탈퇴" />

      </LinearLayout>

      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:src="@drawable/forward"
          android:layout_gravity="center"/>

   </LinearLayout>
   <TextView
       android:id="@+id/tv_cs"
       android:textAlignment="center"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/setting_underline2"
       android:textColor="#595959"
       android:textSize="20dp"/>

</LinearLayout>