<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginProfileActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="내 정보 입력"
            android:textColor="@color/black"
            android:textSize="27sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="프로필 사진을 설정해주세요"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="28sp"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:clipToPadding="true"
            android:backgroundTint="#123456"
            app:cardCornerRadius="125dp">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/imgv_profile"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/minji10"/>
        </androidx.cardview.widget.CardView>
        </LinearLayout>


        <ImageView
            android:id="@+id/imgv_select"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:paddingHorizontal="13dp"
            android:paddingVertical="12dp"
            android:src="@drawable/camera" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_next"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#F6DD6D"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 설정하기"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>