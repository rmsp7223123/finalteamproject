<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".board.BoardFragment"
    android:orientation="vertical"
    android:background="#51F6DD6D">

    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"/>

        <com.example.finalteamproject.common.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="수정하기"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius0">

        <EditText
            android:id="@+id/edt_title"
            android:maxLength="50"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목을 입력하세요."
            android:background="#00000000"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/border_radius0">

        <EditText
            android:id="@+id/edt_content"
            android:maxLength="2000"
            android:gravity="left|top"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="내용을 입력하세요."
            android:background="#00000000"
            />

    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:id="@+id/rl_secret"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_secret"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/secret_unchecked"/>

        <com.example.finalteamproject.common.CustomTextview
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀글"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_toEndOf="@id/imgv_secret"/>

        <com.example.finalteamproject.common.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀글은 작성자와 관리자에게만 보여집니다"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="11dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_next"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#F6DD6D"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="60dp">

            <com.example.finalteamproject.common.CustomTextview
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하기"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>