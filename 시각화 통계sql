--경로당 통계
--지역별, 인기많은 경로당

--회원 통계
--성별 통계, 나이 통계

--경로당-지역별 조회
select count(*) from senior
where sido='전라북도';

--경로당-인기별 통계
select * from senior_like;
select *
from (
select *
from senior_like
order by senior_like_num desc)
where rownum <= 10;

--빠밤~!! mapper 조회 쿼리
select *
from(
select *
from senior_like l
left join senior s
on l.key = s.key
order by senior_like_num desc)
where rownum <= 10;


--회원-성별 조회
select
(select count(*)
from member where member_gender = '여') as 여자,
(select count(*)
from member where member_gender = '남') as 남자
from dual;


--빠밤~!! mapper 조회 쿼리
SELECT
    '여자' gender,
    COUNT(*) AS population
FROM member
WHERE member_gender = '여'
UNION ALL
SELECT
    '남자' AS gender,
    COUNT(*) AS population
FROM member
WHERE member_gender = '남';


--회원-나이별 조회
select *
from member
where extract(year from sysdate) - extract(year from member_birth) < 40;